<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/order_recipt_grid_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        />

    <LinearLayout
        android:id="@+id/order_recipt_grid_item_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/order_recipt_grid_item_text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/order_recipt_grid_item_text_inner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/order_recipt_grid_item_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/order_recipt_grid_item_text_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

         </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/order_recipt_grid_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>