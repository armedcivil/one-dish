<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grid_background"
    android:padding="5dp"
    >

    <ImageView
        android:id="@+id/order_recipt_grid_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:id="@+id/order_recipt_grid_item_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/order_recipt_grid_item_image"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/order_recipt_grid_item_text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="20sp"
            android:textColor="@color/serizawa_black"/>

        <LinearLayout
            android:id="@+id/order_recipt_grid_item_text_inner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/order_recipt_grid_item_text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="15sp"
                android:textColor="@color/serizawa_black"/>

            <TextView
                android:id="@+id/order_recipt_grid_item_text_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="15sp"
                android:textColor="@color/serizawa_black"/>

         </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/order_recipt_grid_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>